<?xml version="1.0"?>
<toolbox>
<tool>
  <key>import</key>
  <scope>request</scope>
  <class>org.apache.velocity.tools.view.tools.ImportTool</class>
</tool>
<tool>
   <key>date</key>
   <scope>application</scope>
   <class>org.apache.velocity.tools.generic.DateTool</class>
</tool>

<tool>
		<key>numberTool</key>
		<scope>application</scope>
		<class>org.apache.velocity.tools.generic.NumberTool</class>
		<parameter name="format" value="0.00" />
	</tool>

	<tool>
		<key>displayTool</key>
		<scope>application</scope> 
		<class>org.apache.velocity.tools.generic.DisplayTool</class>
	</tool>
	
	<tool>   
	    <key>escape</key>
	    <scope>application</scope>
	    <class>org.apache.velocity.tools.generic.EscapeTool</class>
	</tool>

	<tool>
	     <key>math</key>
	     <scope>application</scope>
	     <class>org.apache.velocity.tools.generic.MathTool</class>
	</tool>
	
	<tool>
	     <key>cookie</key>
	     <scope>request</scope>
	     <class>org.apache.velocity.tools.view.tools.CookieTool</class>
	</tool>


	<tool>
		<key>calendarHelper</key>
		<scope>application</scope>
		<class>com.cloudwinker.framework.utils.CalendarHelper</class>
	</tool>

</toolbox>
